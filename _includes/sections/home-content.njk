<section class="latest-newsletter-section full-width">
  <div class="container">
    <h2>{% if currentLanguage == "en" %}Latest Newsletter{% else %}Nyeste nyhetsbrev{% endif %}</h2>
    
    <div class="latest-article">
      {% if currentLanguage == "en" %}
        {% set newsletterPath = "en/newsletter/" %}
        {% set articlesUrl = "/en/articles/" %}
      {% else %}
        {% set newsletterPath = "no/nyhetsbrev/" %}
        {% set articlesUrl = "/no/artikler/" %}
      {% endif %}
      
      {% set latestArticle = collections.all | getNewestItemByBasePath(newsletterPath) %}
      
      {% if latestArticle %}
        <div class="article-card">
          {% if latestArticle.data.image %}
          <div class="article-image">
            <img src="{{ latestArticle.data.image }}" alt="{{ latestArticle.data.title }}">
          </div>
          {% endif %}
          <div class="article-content">
            {% if latestArticle.date %}
              <div class="article-date">{{ latestArticle.date | dateDisplay('dd LLL yyyy') }}</div>
            {% endif %}
            
            <h3>{{ latestArticle.data.title }}</h3>
            
            {% if latestArticle.data.author %}
              <div class="article-author">{{ latestArticle.data.author }}</div>
            {% endif %}
            
            <div class="article-excerpt">
              <p>{{ latestArticle.data.description }}</p>
            </div>
            
            <div class="article-actions">
              <a href="{{ latestArticle.url }}" class="read-more-link">
                {% if currentLanguage == "en" %}Read more{% else %}Les mer{% endif %}
                <span class="arrow-icon">‚Üí</span>
              </a>
            </div>
          </div>
        </div>
      {% else %}
        <p class="no-articles">
          {% if currentLanguage == "en" %}
            No newsletter articles are currently available.
          {% else %}
            Ingen nyhetsbrevartikler er tilgjengelige for √∏yeblikket.
          {% endif %}
        </p>
      {% endif %}
    </div>
    
    <div class="newsletter-cta">
      <a href="{{ langUtils.localizeUrl('newsletter', currentLanguage) }}" class="btn btn-outline">
        {% if currentLanguage == "en" %}View All Newsletters{% else %}Se alle nyhetsbrev{% endif %}
      </a>
    </div>
  </div>
</section> 